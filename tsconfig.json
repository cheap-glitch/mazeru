{
  "files": [
    "src/index.ts"
  ],

  "compilerOptions": {
    "module":                     "commonjs",
    "target":                     "es2018",

    "outDir":                     "build",
		"noEmitOnError":              true,
    "removeComments":             true,
    "declaration":                true,
    "declarationMap":             true,

    "lib":                        ["dom", "es2019"],
    "moduleResolution":           "node",
    "esModuleInterop":            true,
    "resolveJsonModule":          true,

    "strict":                     true,
    "downlevelIteration":         true,
		"noFallthroughCasesInSwitch": true,
    "noImplicitAny":              true,
    "noImplicitReturns":          true,
    "noImplicitThis":             true,
    "noUnusedLocals":             true,
		"noUnusedParameters":         true
  }
}
