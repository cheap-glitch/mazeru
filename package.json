{
  "name": "mazeru",
  "description": "A flexible deep merging utility for JSON-like objects.",
  "version": "1.0.2",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/mazeru.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/mazeru/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/mazeru#readme",
  "main": "build/index.min.js",
  "types": "build/index.d.ts",
  "files": [
    "src/**/*.ts",
    "build/**/*.js",
    "build/**/*.d.ts"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf build",
    "build:minify": "terser --compress --mangle toplevel --comments '/^!/' --output build/index.min.js -- build/index.js",
    "build:prod": "npm run build && npm run build:minify",
    "build:watch": "tsc --watch",
    "coverage": "jest --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run build:clean && npm run build:prod",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true
    },
    "overrides": [
      {
        "files": [
          "./test/index.test.ts"
        ],
        "rules": {
          "unicorn/no-null": "off"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.3.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "type-fest": "^0.20.2",
    "typescript": "^4.1.3"
  }
}
