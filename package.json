{
  "name": "mazeru",
  "version": "2.0.0",
  "description": "A flexible deep merging utility for JSON-like objects.",
  "license": "ISC",
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "repository": "cheap-glitch/mazeru",
  "homepage": "https://github.com/cheap-glitch/mazeru#readme",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bugs": "https://github.com/cheap-glitch/mazeru/issues",
  "funding": "https://github.com/sponsors/cheap-glitch",
  "keywords": [
    "arrays",
    "config",
    "deep",
    "json",
    "merge",
    "merging",
    "mixins",
    "objects",
    "flexible",
    "properties",
    "spread"
  ],
  "files": [
    "build"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf build && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "jest --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run test && npm run build:clean",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true
    },
    "overrides": [
      {
        "files": [
          "./test/index.test.ts"
        ],
        "rules": {
          "unicorn/no-null": "off"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "coverageDirectory": ".coverage"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^2.2.0",
    "@cheap-glitch/tsconfig": "^1.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "empty-dir-cli": "^1.0.2",
    "eslint": "^8.6.0",
    "jest": "^27.4.7",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "type-fest": "^2.9.0",
    "typescript": "^4.5.4"
  }
}
